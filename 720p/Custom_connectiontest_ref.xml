			<textcolor>Label_Normal</textcolor>
					<aligny>center</aligny>
						<alignx>center</alignx>
						<visible>!IsEmpty(Skin.String(infoo))</visible>
				</control>
				
			
			
				
			
			
			
					
					
					
					
					
					</control>
					
					
					
					
					
					
					
					<control type="image">
			
