<includes>

	<include name="Common_Splash">
	
		<control type="group">
			
			<include>Common_Dimensions</include>
		
			<animation type="WindowOpen">
		
				<effect type="fade" start="100" end="100" time="2000" />
				<effect type="fade" start="100" end="0" time="400" delay="2000" />
				
			</animation>
			
			<animation type="WindowClose">
		
				<effect type="fade" start="0" end="0" time="100" />
				
			</animation>
			
			<control type="image">
				
				<include>Common_Dimensions</include>
				<texture>colors/color_white.png</texture>
				<colordiffuse>Background_Normal</colordiffuse>
			
			</control>
			
			<control type="image">
				
				<animation type="WindowOpen">
		
				<effect type="fade" start="0" end="100" time="400" delay="200" />
				
			</animation>
				
				<include>Common_Dimensions</include>
				<texture>$VAR[Splash_Image]</texture>
			
			</control>
		
		</control>
	
	</include>

</includes>